<Window x:Class="PL.AddDroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddDroneWindow" Height="640" Width="800">
    <Grid Margin="0,2,0,-6">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF8DB1C8"/>
                <GradientStop Color="#FF356F93" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lblTitleDrone" Content="Add Drone:" HorizontalAlignment="Left" Height="54" Margin="14,7,0,0" VerticalAlignment="Top" Width="209" FontSize="20"/>
        <Label x:Name="lblIdDrone" Content="Id:" HorizontalAlignment="Left" Height="54" Margin="30,84,0,0" VerticalAlignment="Top" Width="47" FontSize="20"/>
        <Label x:Name="lblModelDrone" Content="Model of Drone:" HorizontalAlignment="Left" Height="48" Margin="30,156,0,0" VerticalAlignment="Top" Width="210" FontSize="20"/>
        <Label x:Name="lblWeightDrone" Content="Weight:" HorizontalAlignment="Left" Height="39" Margin="30,212,0,0" VerticalAlignment="Top" Width="146" FontSize="20"/>
        <Label x:Name="lblIdStation" Content="Station For Charging:" HorizontalAlignment="Left" Height="39" Margin="31,482,0,0" VerticalAlignment="Top" Width="255" FontSize="20"/>
        <Label x:Name="lblBattery" Content="Battery:" HorizontalAlignment="Left" Margin="30,264,0,0" VerticalAlignment="Top" Width="78" FontSize="20"/>
        <Label x:Name="lblStatus" Content="Status:" HorizontalAlignment="Left" Margin="30,301,0,0" VerticalAlignment="Top" Width="100" FontSize="20"/>
        <Label x:Name="lblParcelInWay" Content="Parcel In Way:" HorizontalAlignment="Left" Margin="31,345,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.147,-1.293" Width="150" FontSize="20"/>
        <Label x:Name="lblLocation" Content="Location:" HorizontalAlignment="Left" Margin="30,382,0,0" VerticalAlignment="Top" Width="94" FontSize="20"/>
        <Label x:Name="lblLongitude" Content="Longitude:" HorizontalAlignment="Left" Margin="118,385,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="lblLatitude" Content="Latitude:" HorizontalAlignment="Left" Margin="118,419,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.31,1.577"/>

        <TextBox x:Name="txtIdDrone" HorizontalAlignment="Left" Height="35" Margin="79,84,0,0" Text="{Binding Id, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" PreviewKeyDown="txtIdDrone_PreviewKeyDown"/>
        <TextBox x:Name="txtModelDrone" HorizontalAlignment="Left" Height="32" Margin="192,164,0,0" Text="{Binding ModelDrone, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" PreviewKeyDown="txtModelDrone_PreviewKeyDown"/>
        <ComboBox x:Name="cmbWeightDrone" HorizontalAlignment="Left" Height="39" Margin="191,221,0,0" VerticalAlignment="Top" Width="200" SelectedItem="{Binding MaxWeight, Mode=TwoWay}"/>
        <ComboBox x:Name="cmbIdStation" HorizontalAlignment="Left" Height="35" Margin="232,486,0,0" VerticalAlignment="Top" Width="262"/>
        <ComboBox x:Name="cmbStatus" HorizontalAlignment="Left" Margin="191,306,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBattery" HorizontalAlignment="Left" Margin="191,273,0,0" Text="{Binding Battery, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtLongitude" HorizontalAlignment="Left" Margin="208,391,0,0" Text="{Binding Location.Longitude, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostFocus="txtLongitude_LostFocus" PreviewKeyDown="txtLongitude_PreviewKeyDown"/>
        <TextBox x:Name="txtLatitude" HorizontalAlignment="Left" Margin="208,426,0,0" Text="{Binding Location.Latitude, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostFocus="txtLatitude_LostFocus" PreviewKeyDown="txtLatitude_PreviewKeyDown"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="43" Margin="20,527,0,0" VerticalAlignment="Top" Width="150" FontSize="18" Click="btnAdd_Click" Background="#FFF3E9E9"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Height="54" Margin="691,20,0,0" VerticalAlignment="Top" Width="75" FontSize="20" Click="btnClose_Click"/>
        <Grid x:Name="grdUpdating" HorizontalAlignment="Left" Height="521" Margin="456,74,0,0" VerticalAlignment="Top" Width="310">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="303*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="405*"/>
                <RowDefinition Height="116*"/>
            </Grid.RowDefinitions>
            <Button x:Name="btnUpdateDrone" Content="Update Drone" HorizontalAlignment="Left" Height="54" Margin="116,128,0,0" VerticalAlignment="Top" Width="194" FontSize="18" Click="btnUpdateDrone_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="btnSendForCharging" HorizontalAlignment="Left" Height="56" Margin="114,44,0,0" VerticalAlignment="Top" Width="196" FontSize="18" Click="btnSendForCharging_Click" RenderTransformOrigin="0.535,2.726" Content="Sending For Charging" Visibility="Visible" Grid.ColumnSpan="2"/>
            <Button x:Name="btnSchedulingForSending" Content="Scheduling for sending" HorizontalAlignment="Left" Height="45" Margin="47,361,0,0" VerticalAlignment="Top" Width="196" FontSize="18" Click="btnSchedulingForSending_Click" Visibility="Hidden" Grid.RowSpan="2"/>
            <Button x:Name="btnReleaseDroneCharging" Content="Release from Charging" HorizontalAlignment="Left" Height="42" Margin="116,218,0,0" VerticalAlignment="Top" Width="196" FontSize="18" Click="Button_Click" Visibility="Visible" Grid.ColumnSpan="2"/>
            <Button x:Name="btnPickUpSending" Content="Pick Up Sending" HorizontalAlignment="Left" Height="36" Margin="47,31,0,0" VerticalAlignment="Top" Width="196" FontSize="18" Click="btnPickUpSending_Click" Visibility="Hidden" Grid.Row="1"/>
            <Button x:Name="btnDelivered" Content="Delivery Sending" HorizontalAlignment="Left" Height="43" Margin="47,90,0,0" VerticalAlignment="Top" Width="196" FontSize="18" Click="btnDelivered_Click" Visibility="Hidden" Grid.Row="1"/>
        </Grid>
        <ListBox x:Name="lsbParcelInWay" HorizontalAlignment="Left" Height="31" Margin="191,348,0,0" VerticalAlignment="Top" Width="265" FontSize="18" ItemsSource="{Binding ParcelInWay, Mode=TwoWay}"/>

    </Grid>
</Window>
